<h3>Edit a Question</h3>

<%= form_for @question do |f| %>

  <% if @question.errors.any? %>
    <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <br/>

  <%= f.submit 'Submit' %>
<% end %><br/>

<div>
  <%= link_to "Delete question", question_path, method: :delete, data: {
  confirm: "Are you sure?" } %>
</div>
